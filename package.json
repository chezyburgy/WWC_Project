{
  "name": "event-driven-ecommerce",
  "private": true,
  "version": "0.1.0",
  "description": "Event-driven e-commerce pipeline with Node.js, Kafka, MongoDB, and React dashboard",
  "workspaces": [
    "libs/*",
    "services/*",
    "apps/*",
    "tools/*"
  ],
  "scripts": {
    "compose:up": "docker compose up --build",
    "compose:down": "docker compose down -v",
    "compose:logs": "docker compose logs -f --tail=200",
    "build": "npm run -ws build",
    "clean": "npm run -ws clean || true",
    "lint": "echo 'No root lint'",
    "test": "npm run -ws test --if-present",
  "start": "COMPOSE_PROFILES=infra,app docker compose up --build",
  "compose:up:infra": "docker compose --profile infra up -d",
  "compose:up:all": "COMPOSE_PROFILES=infra,app docker compose up --build",
    "dev:infra": "docker compose --profile infra up -d",
    "dev": "npm run -w @ecom/shared build && concurrently -k -n shared,order,inventory,payment,shipping,read,web \"npm:watch --workspace=@ecom/shared\" \"npm:dev --workspace=@ecom/order-service\" \"npm:dev --workspace=@ecom/inventory-service\" \"npm:dev --workspace=@ecom/payment-service\" \"npm:dev --workspace=@ecom/shipping-service\" \"npm:dev --workspace=@ecom/read-model-service\" \"npm:dev --workspace=@ecom/dashboard\"",
    "kafka:create-topics": "npm run -w @ecom/kafka-admin start",
    "kafka:seed:orders": "npm run -w @ecom/kafka-admin seed:orders",
    "kafka:seed:ops": "npm run -w @ecom/kafka-admin seed:ops",
    "kafka:peek": "npm run -w @ecom/kafka-admin peek"
  },
